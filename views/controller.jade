doctype html
html(lang="ja")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no")
        title #{title} #{version}
        link(href='http://fonts.googleapis.com/css?family=Racing+Sans+One',rel='stylesheet' type='text/css')
        link(rel="stylesheet", href="css/base.css")
        link(rel="stylesheet", href="css/controller.css")
    body

        div#controller.controller(style="display: none;")
            div#id(style="display: none;") #{id}
            div#boxOpening.inner-cm2(style="display: none;")
                h1.ttl
                    span.ttl__txt #{title}
                    br
                    span.ttl__txt2 &nbsp;#{version}
                a#btnPlay.btn-play PLAY
            div#boxController(style="display: none;")
                div.inner-lt
                    a#btnCamera.btn-camera &nbsp;
                div.inner-cm
                    a#btnHandleLeft.btn-handle-left &nbsp;
                    a#btnHandleRight.btn-handle-right &nbsp;
                div.inner-rb
                    a#btnAccelerator.btn-accelarator &nbsp;
                div.inner-lb
                    a#btnBack.btn-back &nbsp;
            div#boxError.inner-cm2(style="display: none;")
                p.txt Connection with the PC has been removed.

        // JS
        script(src="/socket.io/socket.io.js")
        script(src="js/lib/jquery-1.10.1.min.js")
        script(src="js/lib/lib.js")
        script(src="js/imjcart.js")
        script(src="js/controller.js")

